package java0130_ex01;

import java.util.ArrayList;
import java.util.Scanner;

public class Simulator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 도서관리 프로그램
		// 1. 등록 2.삭제 3. 도서 전체 조회 4. 상세조회 5.종료
		ArrayList<BookManagement> arlist = new ArrayList<BookManagement>();
		Scanner sc = new Scanner(System.in);
		System.out.println("========도서관리 프로그램입=========");
		int choice = 1;
		while (true) {
			System.out.println("1. 등록 2.삭제 3. 도서 전체 조회 4. 상세조회 5.종료 ");
			System.out.print("번호 입력 >> ");
			choice = sc.nextInt();
			if (choice == 1) {
				System.out.println("책 등록을 시작합니다.");
				System.out.println("책의 이름을 입력하세요");
				sc.nextLine();
				String title = sc.nextLine();
			} else if (choice == 2) {
				System.out.println("프로그램을 종료합니다.");
				break;
			} else if (choice == 3) {
				System.out.println("프로그램을 종료합니다.");
				break;
			} else if (choice == 4) {
				System.out.println("프로그램을 종료합니다.");
				break;
			} else if (choice == 5) {
				System.out.println("프로그램을 종료합니다.");
				break;
			} else {
				System.out.println("잘못입력하셨습니다.");
			}

		}

		sc.close();
	}

}
